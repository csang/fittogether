<% title "Show Gym Data" %>
<section class="admin_maincontent">
  <div class="page-header">
    <div class="col-sm-9 PaddingLeft">
      <h1 class="NoMargin">Show Gym Data</h1>
    </div>
    <div class="col-sm-3 PaddingRight">
      <div class="show_back_right">
       
        <%= link_to 'Back', gym_management_admin_accounts_path , :class => 'btn btn-default' %>
      </div></div>
    <div class="clear"></div>
  </div>
  <p id="notice"><%= notice %></p>
  <div class="show_content">
    <div class="show_content_row">
      <label>Name:</label>
      <p> <%= @user.name %></p>
    </div>
    <div class="show_content_row">
      <label>Address:</label>
     <% @user.address.each { |x|  %>
      <p> <%= x %></p>
      <% } %>
    </div>
    <div class="show_content_row">
      <label>Manager:</label>
      <p><%= (@user.account.present?) ? @user.account.first_name : '' %></p>
    </div>
    <div class="show_content_row">
      <label>Specialties:</label>
     
       <% @user.specialties.each { |x|  %>
      <p> <%= get_specialty_name(x) %></p>
      <% } %>
    </div>
   
    <div class="show_content_row">
      <label>Group Classes: </label>
       <% @user.groupclasses.each { |x|  %>
      <p> <%= get_specialty_name(x) %></p>
      <% } %>
    </div>
    
     <div class="show_content_row">
      <label>Amenities: </label>
       <% @user.amenities.each { |x|  %>
      <p> <%= get_amenity_name(x) %></p>
      <% } %>
    </div>
   
   
  <div class="clear"</div>
</section>
