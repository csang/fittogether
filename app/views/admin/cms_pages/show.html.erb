<% title "Show Page" %>
<section class="admin_maincontent">
  <div class="page-header">
    <div class="col-sm-9 PaddingLeft">
      <h1 class="NoMargin">Show User</h1>
    </div>
    <div class="col-sm-3 PaddingRight">
      <div class="show_back_right">
        <%= link_to 'Edit', edit_admin_cms_page_path(@admin_cms_pages) , :class => 'btn btn-primary' %>
        <%= link_to 'Back', admin_cms_pages_path() , :class => 'btn btn-default' %>
      </div></div>
    <div class="clear"></div>
  </div>
  <p id="notice"><%#= notice %></p>
  <div class="show_content">
    <div class="show_content_row">
      <label>Name:</label>
      <p> <%= @admin_cms_pages.name %></p>
    </div>
    <div class="show_content_row">
      <label>Content:</label>
      <p> <%= @admin_cms_pages.content.html_safe %></p>
    </div>
    <div class="show_content_row">
      <label>Meta Title:</label>
      <p> <%= @admin_cms_pages.meta_title %></p>
    </div>
    <div class="show_content_row">
      <label>Meta Description:</label>
      <p><%= (@admin_cms_pages.meta_desc.present?) ? @admin_cms_pages.meta_desc : '' %></p>
    </div>
    <div class="show_content_row">
      <label>Seo Url:</label>
      <p><%= (@admin_cms_pages.meta_keyword.present?) ? @admin_cms_pages.meta_keyword : '-'   %></p>
    </div>
    <div class="show_content_row">
      <label>Status:</label>
      <p><%= (@admin_cms_pages.status== true) ? 'Active' : 'Inactive'    %></p>
    </div>
    <div class="show_content_row">
      <label>Show in Footer:</label>
      <p><%= (@admin_cms_pages.show_in_footer== true) ? 'Yes' : 'No'    %></p>
    </div>
  
    </div>
    
   
  <div class="clear"</div>
</section>