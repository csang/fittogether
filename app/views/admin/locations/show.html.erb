
<% title "Show Location" %>
<section class="admin_maincontent">
  <div class="page-header">
    <div class="col-sm-9 PaddingLeft">
      <h1 class="NoMargin">Show User</h1>
    </div>
    <div class="col-sm-3 PaddingRight">
      <div class="show_back_right">
        <%= link_to 'Edit', edit_admin_location_path(@admin_locations) , :class => 'btn btn-primary' %>
        <%= link_to 'Back', admin_locations_path , :class => 'btn btn-default' %>
      </div></div>
    <div class="clear"></div>
  </div>
  <p id="notice"><%#= notice %></p>
  <div class="show_content">
    <div class="show_content_row">
      <label>Name:</label>
      <p> <%= @admin_locations.name %></p>
    </div>
    <div class="show_content_row">
      <label>Code</label>
      <p> <%= @admin_locations.state_code %></p>
    </div>
    
    <div class="show_content_row">
      <label>Cities:</label>
    
      <p><%  abc = City.where(:state_code => @admin_locations.state_code ).map(&:name)   %>
        
 <% abc.each do |xy| %>
        <%= xy %>,
 <% end %>
        </p>
    </div>
  
    </div>
    
   
  <div class="clear"</div>
</section>