
		<div class="comment" id="scont<%= @comment.id  %>">
			 <% abc =  get_user_detail(@comment.account_id) %>
		<div class="avatar">
                  <% img = useravatar(abc) %>
			  <%= image_tag img %>
		
			</div>
				<h3><a href="<%= abc.user_name %>" ><%= abc.first_name %> <%= abc.last_name.present? ? abc.last_name : '' %></a></h3>
				<span class="time"><% @comment.created_at.strftime("%B %e at %l:%M") %><%= time_ago_in_words(@comment.created_at)  %> ago</span>
				<% if @account.id == @comment.account_id  %>     
                                <a  class="feed-comment-dlt" data-id="<%=  Base64.encode64(@comment.id.to_s)   %>" title="Delete" href="javascript:void(0);" class="">DELETE</a>
                               <% end %>
                                <p> <% @comment.text.split.select {|w| %>
       <% if  w[0] == "#" %>
      <%=raw tag_links(w)%>
     <% elsif w[0] == "@" %>    
                <%=raw user_links(w)%>                                      
      <% else %>    
        <%= w %>    
      <% end %>      
      <%  } %> </p>
		 </div>
	
