$('#seed').append('<%= j render(:partial => 'fitspot') %>');
<% if @fitspots.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @fitspots %>');
  $('.loading-image').css("display", "inline-block");
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
  $('.loading-image').css("display", "none");
<% end %>	 

  	$('.sugfitpost').each(function(i, v){		
		var $that = $(this);
		$that.geocomplete({ 
			map: '#'+$that.attr('map_placeholder'),
			mapOptions: {
			zoom: 100,
			draggable: false
		  },
		  markerOptions: {
			disabled: true
		  },			
		});	
		$that.trigger("geocode");
	});

