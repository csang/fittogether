					<%= @profile == 'profile_activities' ? link_to('Activities'.html_safe, "/#{@profileuser.user_name}/activities", html_options = {'class' => 'selected'}) : link_to('Activities'.html_safe, "/#{@profileuser.user_name}/activities") %>
