					<% else %>
                      <%= @profile == 'profile_appointments' ? link_to('Appointments'.html_safe, "/#{@profileuser.user_name}/appointments", html_options = {'class' => 'selected'}) : link_to('Appointments'.html_safe, "/#{@profileuser.user_name}/appointments") %>
				
					 <% if @profileuser.user_type.to_i == 2 %>
							<%= @profile == 'profile_friends' ? link_to('Followers'.html_safe, "/#{@profileuser.user_name}/friends", html_options = {'class' => 'selected'}) : link_to('Followers'.html_safe, "/#{@profileuser.user_name}/friends") %>
					 <% else %>
							<%= @profile == 'profile_friends' ? link_to('Friends'.html_safe, "/#{@profileuser.user_name}/friends", html_options = {'class' => 'selected'}) : link_to('Friends'.html_safe, "/#{@profileuser.user_name}/friends") %>
					 <% end %>
					 <% end %>
